{
  "manifest_version": 3,
  "name": "YouTube Timestamped Notes",
  "version": "1.0.0",
  "description": "YouTube動画の視聴中に重要なポイントをタイムスタンプ付きで記録し、記録したメモから動画の特定時点にすぐにジャンプできるようにする拡張機能",
  "permissions": [
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "*://www.youtube.com/*"
  ],
  "action": {
    "default_popup": "html/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/watch*"],
      "js": ["js/content.js"],
      "css": ["css/content.css"]
    }
  ],
  "options_page": "html/options.html",
  "background": {
    "service_worker": "js/background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}

